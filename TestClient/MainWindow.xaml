<Window x:Class="TestClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <StackPanel>
    <Button x:Name="btnConnect" Click="btnConnect_Click">Connect</Button>
    <Button x:Name="btnMessage" Click="btnMessage_Click">Ping Message</Button>
    <Button x:Name="btnDisconnect" Click="btnDisconnect_Click">Disconnect</Button>
    <ListBox MaxHeight="450" ItemsSource="{Binding ServerMessages}" />
  </StackPanel>
</Window>
